<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="#11b4b4b4" />

            <corners android:radius="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="2dp"
                android:left="1dp"
                android:right="2dp"
                android:top="1dp" />

            <solid android:color="#10b7b7b7" />
            <corners android:radius="10dp"/>

        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />

            <solid android:color="#20bebebe" />
            <corners android:radius="20dp"/>

        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />

            <solid android:color="#30b9b9b9" />
            <corners android:radius="20dp"/>

        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="#50b3b3b3" />
            <corners android:radius="20dp"/>

        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@android:color/white" />
            <stroke android:color="#d1d1d1" android:width="1dp"/>
            <corners android:radius="20dp" />
        </shape>
    </item>

</layer-list>